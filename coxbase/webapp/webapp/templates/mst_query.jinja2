  crossorigin=""/>

    <!-- Custom styles for this scaffold -->
    <link href="{{request.static_url('webapp:static/css/main.css')}}" rel="stylesheet">
    <!-- HTML5 shiv and Respond.js IE8 support of HTML5 elements and media queries -->
  </head>

  <body>

	  {% include 'nav.jinja2' %}
    <!--main-->
    
      <div class="container">
	      <div class="card_mlva">
		      <form id="mst_form">
			      <fieldset>
			      </fieldset>
			      <fieldset class="mst_table">
				      <legend>Enter query below</legend>
				      <div id="table_div">
				      <table class="query_table">
					      <tr> 
						      <th class="query_table_header">COX2</th>
						      <th class="query_table_header">COX5</th>
						      <th class="query_table_header">COX18</th>
						      <th class="query_table_header">COX20</th>
						      <th class="query_table_header">COX22</th>
						      <th class="query_table_header">COX37</th>
						      <th class="query_table_header">COX51</th>
						      <th class="query_table_header">COX56</th>
						      <th class="query_table_header">COX57</th>
						      <th class="query_table_header">COX61</th>
					      </tr>
					      <tr>
						      <td><input class="tr_entry" name="cox2" type="number"></td>
						      <td><input class="tr_entry" name="cox5" type="number"></td>
						      <td><input class="tr_entry" name="cox18" type="number"></td>
						      <td><input class="tr_entry" name="cox20" type="number"></td>
						      <td><input class="tr_entry" name="cox22" type="number"></td>
						      <td><input class="tr_entry" name="cox37" type="number"></td>
						      <td><input class="tr_entry" name="cox51" type="number"></td>
						      <td><input class="tr_entry" name="cox56" type="number"></td>
						      <td><input class="tr_entry" name="cox57" type="number"></td>
						      <td><input class="tr_entry" name="cox61" type="number"></td>
					      </tr>
					      <tr>
         						<td colspan="15"><hr/></td>
    						</tr>
						<tr>
							<td>3</td>
							<td>2</td>
							<td>6</td>
							<td>1</td>
							<td>5</td>
							<td>4</td>
							<td>4</td>
							<td>10</td>
							<td>6</td>
							<td>5</td>
							<td><button type="button" id="sampleQuery">Sample Query</button></td>
						</tr>
					      <tr>
         						<td colspan="15"><hr/></td>
    						</tr>
				      </table>
				      </div>
			      </fieldset>
			      <fieldset>
				      <div class="custom-select" style="width:200px;">
					      <p>Max Distance:</p>
			        <select name="distance" id="distance">
    					<option value="0">0</option>
    					<option value="1">1</option>
    					<option value="2">2</option>
    					<option value="3">3</option>
    					<option value="4">4</option>
    					<option value="5">5</option>
					<option value="xx"> 5+ </option>
  				</select>
			      </fieldset>
			<input type="submit" value="Submit Query">
			<button type="reset" id="clearField">Clear field</button>

		      </form>
	      </div>
      </div>
      <div id="empty_error">
      </div>
      <div class="container">
		      <div id="result" class="result_info">
		      </div>
      </div>


    {% include 'footer.jinja2' %}
